<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:gravity="right">
    <TextView android:id="@+id/tvStockName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="上证指数"
        android:paddingRight="50dp"
        android:textColor="#000000"
        />
    <TextView android:id="@+id/tvNowPri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="3322.22"
        android:layout_below="@+id/tvStockName"
        android:textColor="#dddddd"
         android:paddingRight="50dp"
        />
    
   <ImageView
       android:id="@+id/ivDel"
       android:layout_width="25dp"
       android:layout_height="25dp"
       android:layout_alignParentLeft="true"
       android:src="@drawable/close"
       android:layout_marginTop="18dp"
		android:visibility="gone"
		
       />

    <TextView android:id="@+id/tvIncrease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="-14.25"
        android:layout_below="@+id/tvNowPri"
        android:textColor="#dddddd"
         android:paddingRight="50dp"
        />
    <TextView android:id="@+id/tvIncreper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="-0.59%"
        android:layout_below="@+id/tvIncrease"
        android:textColor="#dddddd"
         android:paddingRight="50dp"
        />

</RelativeLayout>
